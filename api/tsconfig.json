{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2019"],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node"],
    "stripInternal": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
